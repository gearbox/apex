# Apex API Configuration
# Copy to .env and update values

# =============================================================================
# ComfyUI Connection
# =============================================================================
COMFYUI_HOST=127.0.0.1
COMFYUI_PORT=18188

# =============================================================================
# API Server
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://apex:apex@localhost:5432/apex
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_ECHO=false

# =============================================================================
# Cloudflare R2 Storage
# =============================================================================
# Get these from Cloudflare Dashboard > R2 > Manage R2 API Tokens
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key
R2_BUCKET_NAME=apex-user-content

# Optional: Custom domain for public URLs (if configured in R2)
# R2_PUBLIC_URL_BASE=https://cdn.yourdomain.com

# =============================================================================
# Content Retention
# =============================================================================
# Number of days to retain user content before automatic cleanup
RETENTION_DAYS=7

# Maximum upload file size in MB (1-100)
MAX_UPLOAD_SIZE_MB=20

# =============================================================================
# Generation Defaults
# =============================================================================
DEFAULT_STEPS=12
MAX_STEPS=20
DEFAULT_CFG=1.1
DEFAULT_SAMPLER=euler
DEFAULT_SCHEDULER=beta
